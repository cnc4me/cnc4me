{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "es2020"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    /* Additional Checks */
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "keyofStringsOnly": true,
    // "types": ["react", "react-dom", "jest", "node"]
    "paths": {
      "@cnc4me/*": ["packages/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "demo/**/*.ts",
    "scripts/*.ts",
    "types/**/*.ts",
    "playground/**/*.ts*"
  ],
  "exclude": ["node_modules"]
}
