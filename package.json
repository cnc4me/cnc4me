{
  "name": "@cnc4me/cnc4me",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "pnpm -F macro-playground dev",
    "preview": "pnpm netlify deploy",
    "prod": "pnpm run site:build && pnpm site:deploy",
    "site:test": "pnpm -F macro-playground test",
    "site:build": "pnpm -F macro-playground build",
    "site:deploy": "pnpm netlify deploy --prod",
    "subtree:chrysalis": "git subtree push --prefix packages/chrysalis chrysalis main",
    "subtree:playground": "git subtree push --prefix apps/website macro-playground main",
    "subtree:monaco-theme": "git subtree push --prefix packages/monaco-theme-gcode monaco-theme-gcode main",
    "subtree:monaco-lang": "git subtree push --prefix packages/monaco-language-gcode monaco-language-gcode main"
  },
  "devDependencies": {
    "@swc/core": "^1.2.159",
    "@swc/jest": "^0.2.20",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.5.1",
    "pnpm": "^7.0.0-rc.3",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "ts-jest": "27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  }
}
