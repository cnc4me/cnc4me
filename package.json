{
  "name": "@cnc4me/cnc4me",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "pnpm": "^7"
  },
  "scripts": {
    "dev": "pnpm -F macro-playground dev",
    "test": "pnpm -F macro-playground test",
    "build": "pnpm -r install && pnpm -F macro-playground build",
    "subtree:chrysalis": "git subtree push --prefix packages/chrysalis chrysalis main",
    "subtree:playground": "git subtree push --prefix apps/website macro-playground main",
    "subtree:monaco-theme": "git subtree push --prefix packages/monaco-theme-gcode monaco-theme-gcode main",
    "subtree:monaco-lang": "git subtree push --prefix packages/monaco-language-gcode monaco-language-gcode main"
  },
  "devDependencies": {
    "@swc/core": "^1.2.187",
    "@swc/jest": "^0.2.21",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.5.1",
    "pnpm": "^7.1.2",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
