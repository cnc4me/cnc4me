{
  "rootDir": ".",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "jest-extended/all"
  ],
  "coverageDirectory": "<rootDir>/coverage/",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts"
  ],
  "coverageReporters": [
    "text-summary",
    "html"
  ],
  "modulePathIgnorePatterns": [
    "/build"
  ],
  "testPathIgnorePatterns": [
    "demo",
    "build",
    "node_modules"
  ]
}