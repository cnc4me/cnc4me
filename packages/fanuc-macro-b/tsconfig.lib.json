{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "module": "ESNext",
    "target": "ES2022",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist/dts",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "emittery"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
